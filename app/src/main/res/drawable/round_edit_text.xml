<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#2DA80B" />

            <corners android:radius="5dp" />
            <gradient
                android:endColor="#4C4D81"
                android:startColor="#B9545B7E"

                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#8C9DF4"
                android:width="1dp"
                />

            <corners
                android:radius="5dp"
                />
            <gradient
                android:startColor="#B90D1645"
                android:endColor="#27286E"

                />
        </shape>
    </item>
</selector>
