<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar anotação"
                android:textSize="24sp" />

            <Button
                android:backgroundTint="#FB5050"
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/bt_create"
                android:text="cancelar" />

            <Button
                android:backgroundTint="#50FB53"
                android:textColor="#000000"
                android:id="@+id/bt_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="criar" />
        </RelativeLayout>

        <RelativeLayout

            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:text="data de criação: " />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/tv_hour"
                android:text="data" />

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora"
                />
        </RelativeLayout>

        <TextView
            android:paddingTop="8dp"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            />
        <EditText
            android:id="@+id/et_title"
            android:padding="4dp"
            android:background="@drawable/round_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="playlit - musicas"/>
        <TextView
            android:paddingTop="8dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição" />

        <EditText
            android:id="@+id/et_description"
            android:background="@drawable/round_edit_text"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:ems="10"
            android:gravity="left|top"
            android:padding="4dp"
            android:textColor="#B2FFFFFF"
            android:hint="Descrever a anotação..."
            android:inputType="textMultiLine"
            android:textSize="15sp">
        </EditText>

        <LinearLayout
            android:paddingTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"/>

                    <EditText
                        android:id="@+id/et_email"
                        android:padding="4dp"
                        android:background="@drawable/round_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email ou deixe vazio" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senha"/>

                    <EditText
                        android:id="@+id/et_password"
                        android:padding="4dp"
                        android:background="@drawable/round_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha ou deixe vazio" />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Url"/>
                    <EditText
                        android:id="@+id/et_url"
                        android:padding="4dp"
                        android:background="@drawable/round_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Link ou deixe vazio" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>